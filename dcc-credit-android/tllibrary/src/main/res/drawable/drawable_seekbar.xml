<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 背景效果 -->

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <!-- angle 是角度 -->
            <gradient
                android:angle="270"
                android:centerColor="@color/colorGray"
                android:centerY="0.75"
                android:endColor="@color/colorGray"
                android:startColor="@color/colorGray" />
        </shape>
    </item>

    <!-- 第一进度条 -->

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="@color/colorCommon"
                    android:centerY="0.75"
                    android:endColor="@color/colorCommon"
                    android:startColor="@color/colorCommon" />
            </shape>
        </clip>
    </item>

