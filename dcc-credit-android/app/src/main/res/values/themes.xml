<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="DccTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="navigationIcon">@drawable/arrow_left</item>

        <item name="cardViewStyle">@style/CardView.Light.Dcc</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Dcc.Medium</item>
        <item name="imageButtonStyle">@style/Widget.AppCompat.ImageButton.Dcc</item>
        <item name="spinnerStyle">@style/Widget.AppCompat.Spinner.Dcc</item>
        <item name="android:spinnerItemStyle">@style/Widget.AppCompat.TextView.SpinnerItem.Dcc</item>
        <item name="android:spinnerDropDownItemStyle">@style/Widget.AppCompat.Light.DropDownItem.Spinner.Dcc</item>
        <item name="android:actionMenuTextColor">?attr/colorAccent</item>

        <item name="dialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Dcc</item>
    </style>

    <style name="DccTheme.App">
    </style>

    <style name="DccTheme.App.Transparent">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="FullWidthDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="Theme.AppCompat.Light.Dialog.Alert.Dcc" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/text_dark</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Medium.Dcc</item>
    </style>

    <style name="TextAppearance.AppCompat.Medium.Dcc" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/text_dark</item>
    </style>

</resources>