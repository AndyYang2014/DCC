<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="io.wexchain.android.dcc.vm.ViewModelHelper"/>
        <variable
                name="order"
                type="io.wexchain.dccchainservice.domain.LoanRecordSummary"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bg_round_rect_frame"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="@dimen/content_padding_horizontal"
            android:layout_marginRight="@dimen/content_padding_horizontal"
            >

        <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{order.lender.name}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_time"
                tools:text="云金融现金贷"
                />

        <TextView
                android:id="@+id/tv_loan_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ViewModelHelper.loanStatusText(context,order.status)}"
                android:background="@{ViewModelHelper.loanStatusBackground(context,order.status)}"
                tools:text="已放币"
                android:textColor="@color/text_white"
                android:minWidth="60dp"
                android:gravity="center"
                app:layout_constraintLeft_toRightOf="@id/tv_product_name"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_product_name"
                android:layout_marginLeft="12dp"
                tools:background="@drawable/bg_status_gray"
                />

        <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{order.applyDate==null?null:@string/time_format_yyyymmdd_hhmmss(order.applyDate)}"
                tools:text="@tools:sample/date/ddmmyy"
                app:layout_constraintTop_toBottomOf="@id/tv_product_name"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="12dp"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="100.0000 BNB"
                android:layout_marginRight="24dp"
                />
        <!--android:text="@{order.borrowAmount.toPlainString()+order.currency.symbol}"-->

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

    </android.support.constraint.ConstraintLayout>
</layout>