<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="io.wexchain.android.dcc.IncentiveProgramActivity"
        android:orientation="vertical"
        >

    <include layout="@layout/include_toolbar"
            android:id="@+id/toolbar"
            />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/content_padding_horizontal"
                android:paddingRight="@dimen/content_padding_horizontal"
                >
            <ImageView
                    android:id="@+id/iv_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/banner_incentive_program"
                    />

            <TextView
                    android:id="@+id/tv_p0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColor="@color/text_dark"
                    app:layout_constraintTop_toBottomOf="@id/iv_banner"
                    android:text="@string/incentive_program_0"
                    android:layout_marginTop="16dp"
                    />

            <ImageView
                    android:id="@+id/iv_i1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_speaker"
                    app:layout_constraintTop_toBottomOf="@id/tv_p0"
                    android:layout_marginTop="18dp"
                    />
            <TextView
                    android:id="@+id/tv_p1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColor="@color/text_dark"
                    app:layout_constraintTop_toBottomOf="@id/tv_p0"
                    app:layout_constraintLeft_toRightOf="@id/iv_i1"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="@string/incentive_program_1"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="4dp"
                    />
            <ImageView
                    android:id="@+id/iv_i2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_speaker"
                    app:layout_constraintTop_toBottomOf="@id/tv_p1"
                    android:layout_marginTop="18dp"
                    />
            <TextView
                    android:id="@+id/tv_p2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColor="@color/text_dark"
                    app:layout_constraintTop_toBottomOf="@id/tv_p1"
                    app:layout_constraintLeft_toRightOf="@id/iv_i2"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="@string/incentive_program_2"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="4dp"
                    />
            <ImageView
                    android:id="@+id/iv_i3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_speaker"
                    app:layout_constraintTop_toBottomOf="@id/tv_p2"
                    android:layout_marginTop="18dp"
                    />
            <TextView
                    android:id="@+id/tv_p3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColor="@color/text_dark"
                    app:layout_constraintTop_toBottomOf="@id/tv_p2"
                    app:layout_constraintLeft_toRightOf="@id/iv_i3"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="@string/incentive_program_3"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="4dp"
                    />
            <ImageView
                    android:id="@+id/iv_i4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_speaker"
                    app:layout_constraintTop_toBottomOf="@id/tv_p3"
                    android:layout_marginTop="18dp"
                    />
            <TextView
                    android:id="@+id/tv_p4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColor="@color/text_dark"
                    app:layout_constraintTop_toBottomOf="@id/tv_p3"
                    app:layout_constraintLeft_toRightOf="@id/iv_i4"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="@string/incentive_program_4"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="4dp"
                    />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</LinearLayout>
