<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="io.wexchain.android.dcc.vm.ViewModelHelper"/>
        <variable
                name="rules"
                type="java.util.Map&lt;String,io.wexchain.dccchainservice.domain.EcoBonusRule&gt;"/>
        <variable
                name="income"
                type="io.wexchain.dccchainservice.domain.EcoDayIncome"/>
    </data>
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="io.wexchain.android.dcc.DccEcoRewardsActivity"
            android:orientation="vertical"
            >

        <include layout="@layout/include_toolbar"
                 android:id="@+id/toolbar"/>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    >

                <LinearLayout
                        android:id="@+id/ll_eco_pt_income"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="72dp"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/ll_eco_dcc_income"
                        android:layout_marginLeft="@dimen/content_padding_horizontal"
                        android:padding="12dp"
                        >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="昨日获得生态值"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:maxLines="1"
                            android:textColor="@color/text_dark"
                            android:textSize="16sp"
                            android:text="@{income.yesterdayAmount.toPlainString()}"
                            tools:text="30"
                            />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ll_eco_dcc_income"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toRightOf="@id/ll_eco_pt_income"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginRight="@dimen/content_padding_horizontal"
                        android:layout_marginLeft="16dp"
                        android:padding="12dp"
                        >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="获得奖励"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:maxLines="1"
                            android:textColor="@color/text_dark"
                            android:textSize="16sp"
                            android:text="@{ViewModelHelper.concatWithoutNull(income.amount.toPlainString(),`DCC`)}"
                            tools:text="10.0000DCC"
                            />

                </LinearLayout>

                <android.support.constraint.Barrier
                        android:id="@+id/barrier_income"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:barrierDirection="bottom"
                        app:constraint_referenced_ids="ll_eco_pt_income,ll_eco_dcc_income"
                        />

                <Button
                        android:id="@+id/btn_income_detail"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColorLink"
                        android:text="奖励详情>>"
                        app:layout_constraintTop_toBottomOf="@id/barrier_income"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginRight="@dimen/content_padding_horizontal"
                        />

                <TextView
                        android:id="@+id/tv_base_rewards_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基础奖励"
                        android:textAppearance="@style/TextAppearance.AppCompat.DccTitle"
                        app:layout_constraintTop_toBottomOf="@id/btn_income_detail"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="@dimen/content_padding_horizontal"
                        android:gravity="center"
                        />

                <TextView
                        android:id="@+id/tv_base_rewards_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="认证就有奖"
                        app:layout_constraintBaseline_toBaselineOf="@id/tv_base_rewards_label"
                        app:layout_constraintLeft_toRightOf="@id/tv_base_rewards_label"
                        android:layout_marginLeft="8dp"
                        />

                <FrameLayout
                        android:id="@+id/fl_cert_id"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_round_rect_frame"
                        app:layout_constraintTop_toBottomOf="@id/tv_base_rewards_label"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="@dimen/content_padding_horizontal"
                        android:layout_marginRight="@dimen/content_padding_horizontal"
                        >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="实名认证"
                            android:layout_gravity="center_vertical|left"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{ViewModelHelper.ecoBonusRuleAmountStr(rules[`CERT_ID`])}"
                            tools:text="+10生态值"
                            android:layout_gravity="center_vertical|right"
                            />
                </FrameLayout>

                <FrameLayout
                        android:id="@+id/fl_cert_bank"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_round_rect_frame"
                        app:layout_constraintTop_toBottomOf="@id/fl_cert_id"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="@dimen/content_padding_horizontal"
                        android:layout_marginRight="@dimen/content_padding_horizontal"
                        >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="银行卡认证"
                            android:layout_gravity="center_vertical|left"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{ViewModelHelper.ecoBonusRuleAmountStr(rules[`CERT_BANK_CARD`])}"
                            tools:text="+10生态值"
                            android:layout_gravity="center_vertical|right"
                            />
                </FrameLayout>

                <FrameLayout
                        android:id="@+id/fl_cert_cm"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_round_rect_frame"
                        app:layout_constraintTop_toBottomOf="@id/fl_cert_bank"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="@dimen/content_padding_horizontal"
                        android:layout_marginRight="@dimen/content_padding_horizontal"
                        >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="运营商认证"
                            android:layout_gravity="center_vertical|left"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{ViewModelHelper.ecoBonusRuleAmountStr(rules[`CERT_COMMUNICATION`])}"
                            tools:text="+10生态值"
                            android:layout_gravity="center_vertical|right"
                            />
                </FrameLayout>

                <TextView
                        android:id="@+id/tv_loan_rewards_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="借币奖励"
                        android:textAppearance="@style/TextAppearance.AppCompat.DccTitle"
                        app:layout_constraintTop_toBottomOf="@id/fl_cert_cm"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="@dimen/content_padding_horizontal"
                        android:layout_marginTop="32dp"
                        android:gravity="center"
                        />

                <TextView
                        android:id="@+id/tv_loan_rewards_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="次数无上限，奖励无上限"
                        app:layout_constraintBaseline_toBaselineOf="@id/tv_loan_rewards_label"
                        app:layout_constraintLeft_toRightOf="@id/tv_loan_rewards_label"
                        android:layout_marginLeft="8dp"
                        />


                <FrameLayout
                        android:id="@+id/fl_loan_reward"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_round_rect_frame"
                        app:layout_constraintTop_toBottomOf="@id/tv_loan_rewards_label"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="@dimen/content_padding_horizontal"
                        android:layout_marginRight="@dimen/content_padding_horizontal"
                        >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="借款成功奖励"
                            android:layout_gravity="center_vertical|left"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{ViewModelHelper.ecoBonusRuleAmountStr(rules[`BORROW_SUCCESS`])}"
                            tools:text="+15生态值"
                            android:layout_gravity="center_vertical|right"
                            />
                </FrameLayout>
                <TextView
                        android:id="@+id/tv_repay_rewards_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="还币奖励"
                        android:textAppearance="@style/TextAppearance.AppCompat.DccTitle"
                        app:layout_constraintTop_toBottomOf="@id/fl_loan_reward"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="@dimen/content_padding_horizontal"
                        android:layout_marginTop="32dp"
                        android:gravity="center"
                        />

                <TextView
                        android:id="@+id/tv_repay_rewards_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="按时还款，给信用加分"
                        app:layout_constraintBaseline_toBaselineOf="@id/tv_repay_rewards_label"
                        app:layout_constraintLeft_toRightOf="@id/tv_repay_rewards_label"
                        android:layout_marginLeft="8dp"
                        />


                <FrameLayout
                        android:id="@+id/fl_repay_reward"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_round_rect_frame"
                        app:layout_constraintTop_toBottomOf="@id/tv_repay_rewards_label"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="@dimen/content_padding_horizontal"
                        android:layout_marginRight="@dimen/content_padding_horizontal"
                        >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="借款成功奖励"
                            android:layout_gravity="center_vertical|left"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{ViewModelHelper.ecoBonusRuleAmountStr(rules[`REPAY_SUCCESS`])}"
                            tools:text="+15生态值"
                            android:layout_gravity="center_vertical|right"
                            />
                </FrameLayout>

            </android.support.constraint.ConstraintLayout>
        </ScrollView>

    </LinearLayout>
</layout>
