<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="io.wexchain.android.dcc.AffiliateActivity"
        >
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:fitsSystemWindows="true"
                >

            <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dcc_logo_with_border"

                    />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/text_betterthanexpress"
                    android:layout_marginTop="16dp"
                    />

            <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:contentPadding="8dp"
                    android:layout_marginTop="24dp"
                    style="?attr/cardViewStyle"
                    app:cardCornerRadius="2dp"
                    >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_blue_magenta"
                        android:text="邀请码 +10DCC"
                        />

            </android.support.v7.widget.CardView>

            <ImageView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    qrContent="@{@string/coming_soon}"
                    android:layout_marginTop="8dp"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/affiliate_description"
                    android:gravity="center"
                    android:layout_marginTop="24dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.DccSubTitle"
                    />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Dcc.Full"
                    android:text="分享给好友"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="@dimen/content_padding_horizontal"
                    android:layout_marginRight="@dimen/content_padding_horizontal"
                    />

            <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

        </LinearLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/text_coming_soon"
                android:background="#7f484848"
                android:clickable="true"
                android:focusable="true"
                />
    </FrameLayout>

</layout>