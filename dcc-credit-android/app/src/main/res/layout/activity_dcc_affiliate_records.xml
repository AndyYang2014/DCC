<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="io.wexchain.android.dcc.DccAffiliateRecordsActivity"
        android:orientation="vertical"
        >

    <include
            layout="@layout/include_toolbar"
            android:id="@+id/toolbar"
            />

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/logo_empty_aff_records"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:text="暂无邀请记录"
                android:gravity="center"
                />

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/content_padding_horizontal"
                android:layout_marginRight="@dimen/content_padding_horizontal"
                >
            <TextView
                    android:id="@+id/tv_invite_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请时间"
                    android:textStyle="bold"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请人"
                    android:textStyle="bold"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_invite_time"
                    app:layout_constraintRight_toRightOf="parent"
                    android:minWidth="80dp"
                    android:gravity="center"
                    android:layout_marginRight="40dp"
                    />
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            />

</LinearLayout>
