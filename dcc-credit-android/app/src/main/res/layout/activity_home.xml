<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.wexchain.android.dcc.HomeActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        style="@style/Widget.AppCompat.Button.Dcc.Medium"
        android:text="设置"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/card_digital_assets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/cardViewStyle"
                android:stateListAnimator="@animator/card_state_animator"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="8dp"
                tools:layout_height="200dp"
                >
                <fragment
                    android:id="@+id/section_assets"
                    android:name="io.wexchain.android.dcc.fragment.DigitalAssetsLimitedFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    tools:layout="@layout/fragment_digital_assets_limited"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="160dp"
                style="?attr/cardViewStyle"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数字资产借贷"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:id="@+id/card_candy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="160dp"
                style="?attr/cardViewStyle"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="糖果领取"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/cardViewStyle"
                android:minHeight="200dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="数字资产"
                    />
            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="邀请好友"
                android:layout_margin="16dp"
                />

            <android.support.v7.widget.CardView
                android:id="@+id/card_my_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/cardViewStyle"
                android:minHeight="160dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的信用"
                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
