<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="io.wexchain.android.dcc.LoanActivity"
        >
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            >

        <ImageView
                android:id="@+id/iv_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/header_loan"
                android:adjustViewBounds="true"
                android:layout_marginLeft="@dimen/content_padding_horizontal"
                android:layout_marginRight="@dimen/content_padding_horizontal"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

        <android.support.v7.widget.CardView
                android:id="@+id/card_start_loan"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/content_padding_horizontal"
                app:layout_constraintRight_toLeftOf="@id/card_my_loan"
                app:layout_constraintTop_toBottomOf="@id/iv_header"
                android:layout_marginTop="16dp"
                app:layout_constraintDimensionRatio="1:1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:contentPadding="0dp"
                >
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/rect_start_loan"
                    />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:id="@+id/card_my_loan"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@id/card_start_loan"
                app:layout_constraintTop_toTopOf="@+id/card_start_loan"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/content_padding_horizontal"
                android:layout_marginLeft="12dp"
                app:layout_constraintDimensionRatio="1:1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:contentPadding="0dp"
                >
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/rect_loan_records"
                    />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:id="@+id/card_my_address"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/card_start_loan"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/content_padding_horizontal"
                app:layout_constraintRight_toLeftOf="@id/card_incentive_program"
                android:layout_marginTop="12dp"
                app:layout_constraintDimensionRatio="1:1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:contentPadding="0dp"
                >
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/rect_beneficiary_address"
                    />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:id="@+id/card_incentive_program"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@id/card_my_address"
                app:layout_constraintTop_toTopOf="@+id/card_my_address"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/content_padding_horizontal"
                android:layout_marginLeft="12dp"
                app:layout_constraintDimensionRatio="1:1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:contentPadding="0dp"
                >
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/rect_incentive_program"
                    />

        </android.support.v7.widget.CardView>

        <android.support.constraint.Barrier
                android:id="@+id/barrier_bottom"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="card_my_address,card_incentive_program"
                />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/footer_dcc_colored"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barrier_bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
