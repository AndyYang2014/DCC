<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="io.wexchain.android.dcc.LoanActivity"
        >
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            >

        <ImageView
                android:id="@+id/iv_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/header_loan"
                android:adjustViewBounds="true"
                android:layout_marginLeft="@dimen/content_padding_horizontal"
                android:layout_marginRight="@dimen/content_padding_horizontal"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

        <android.support.v7.widget.CardView
                android:id="@+id/card_start_loan"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/content_padding_horizontal"
                app:layout_constraintRight_toLeftOf="@id/card_my_loan"
                app:layout_constraintTop_toBottomOf="@id/iv_header"
                android:layout_marginTop="16dp"
                app:layout_constraintDimensionRatio="1:1"
                app:cardCornerRadius="2dp"
                >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/logo_start_loan"
                    android:layout_marginBottom="8dp"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.DccTitle"
                    android:text="我要借款"
                    android:textSize="20sp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="8dp"
                    />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:id="@+id/card_my_loan"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@id/card_start_loan"
                app:layout_constraintTop_toTopOf="@+id/card_start_loan"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/content_padding_horizontal"
                android:layout_marginLeft="12dp"
                app:layout_constraintDimensionRatio="1:1"
                app:cardCornerRadius="2dp"
                >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/logo_my_loan"
                    android:layout_marginBottom="8dp"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.DccTitle"
                    android:text="我的借款"
                    android:textSize="20sp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="8dp"
                    />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:id="@+id/card_my_address"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/card_start_loan"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/content_padding_horizontal"
                app:layout_constraintRight_toLeftOf="@id/card_usdt"
                android:layout_marginTop="12dp"
                app:layout_constraintDimensionRatio="1:1"
                app:cardCornerRadius="2dp"
                >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/logo_my_address"
                    android:layout_marginBottom="8dp"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.DccTitle"
                    android:text="收款地址管理"
                    android:textSize="20sp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="8dp"
                    />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:id="@+id/card_usdt"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@id/card_my_address"
                app:layout_constraintTop_toTopOf="@+id/card_my_address"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/content_padding_horizontal"
                android:layout_marginLeft="12dp"
                app:layout_constraintDimensionRatio="1:1"
                app:cardCornerRadius="2dp"
                >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/logo_usdt"
                    android:layout_marginBottom="8dp"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.DccTitle"
                    android:text="USDT管理"
                    android:textSize="20sp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="8dp"
                    />

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/text_coming_soon"
            android:scaleType="centerInside"
            android:background="#7f484848"
            tools:visibility="gone"
            />
</FrameLayout>
